package com.practise.LeetCode;

import java.util.Arrays;
import java.util.Collection;
import java.util.Collections;
import java.util.List;
import java.util.stream.Collectors;
import java.util.stream.IntStream;

public class ValidPalindrome {

	public static void main(String[] args) {
		String s = "A man, a plan, a canal: Panama";
		System.out.println(isPalindrome(s));
	}
	
	private static boolean isPalindrome(String s) {
        List<String> str = Arrays.asList(s.split("[^A-Z-a-z]"));
        str.removeAll(Collections.singleton(" "));
        System.out.println(str);
        String strJoin = str.stream().collect(Collectors.joining(""));
        System.out.println(strJoin);
        return IntStream.rangeClosed(0,strJoin.length()/2).noneMatch(i->strJoin.charAt(i)!=strJoin.charAt(strJoin.length()-i-1));
    }

}
